{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "es2018",
      "dom"
    ],
    "sourceMap": true,
    "declaration": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "pretty": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "lib"
  },
  "include": ["./src/**/*"],
  "exclude":[
    "node_modules"
  ]
}